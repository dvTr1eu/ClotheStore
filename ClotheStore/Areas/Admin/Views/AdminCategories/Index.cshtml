@model IEnumerable<ClotheStore.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<div class="col-12">
    <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Danh mục sản phẩm</h6>
            </div>
        </div>
        <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Tên danh mục</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Sắp xếp</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Trạng thái</th>
                            <th class="text-secondary opacity-7"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.CatId</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.CatName</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@item.Ordering</p>
                                    </td>
                                    @if (item.Published)
                                    {
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">Public</p>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">Non-Public</p>
                                        </td>
                                    }
                                    <td class="align-middle">
                                        <a class="btn btn-link text-dark px-3 mb-0" asp-area="Admin" asp-controller="AdminCategories" asp-action="Details" asp-route-id="@item.CatId">
                                            <i class="material-icons text-sm me-2">visibility</i>
                                            Xem
                                        </a>
                                        <a class="btn btn-link text-dark px-3 mb-0" asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.CatId">
                                            <i class="material-icons text-sm me-2">edit</i>
                                            Sửa
                                        </a>
                                        <a class="btn btn-link text-danger text-gradient px-3 mb-0" onclick="if (confirm('Bạn có chắn muốn xóa ?')) { location.href = '@Url.Action("Delete", new { id = item.CatId })'; }">
                                            <i class="material-icons text-sm me-2">delete</i>
                                            Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
