@section Scripts{
    <script>
       $(document).ready(function(){
            $('.nav-link').click(function () {
                console.log("ok");
                $('.nav-link').removeClass('active bg-gradient-primary');

                $(this).addClass('active bg-gradient-primary');
            });
       })

        document.addEventListener("DOMContentLoaded", function () {
            // Lấy tất cả các thẻ a có class 'nav-link'
            var navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(function (link) {
                // Thêm sự kiện click cho mỗi thẻ a
                link.addEventListener('click', function () {
                    // Loại bỏ class 'active' khỏi tất cả các thẻ a
                    navLinks.forEach(function (link) {
                        link.classList.remove('active bg-gradient-primary');
                    });

                    // Thêm class 'active' vào thẻ a được click
                    this.classList.add('active bg-gradient-primary');
                });
            });
        });
    </script>
}