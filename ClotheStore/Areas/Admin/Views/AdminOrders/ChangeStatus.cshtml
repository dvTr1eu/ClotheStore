@model ClotheStore.ModelView.DonHangVM

<div class="modal-body" style="padding: 20px;">
    <div class="card" style="border: 1px solid #dee2e6;
    border-radius: 4px;
    margin-bottom: 20px;">
        <div class="card-body" style="padding: 20px;">
            <h4 class="card-title" style=" margin-top: 0;">THÔNG TIN ĐƠN HÀNG @Model.IdDh</h4>
            <div class="table-responsive" style=" overflow-x: auto;">
                <table class="product-info-table m-t-20" style="width: 100%;
    border-collapse: collapse;">
                    <tbody>
                        <tr>
                            <td style="width: 140px">ID: </td>
                            <td class="text-dark font-weight-semibold">@Model.IdDh</td>
                        </tr>
                        <tr>
                            <td style="width: 140px">Ngày mua:</td>
                            <td class="text-dark font-weight-semibold">@String.Format("{0:dd/MM/yyyy}", Model.Ngaytao)</td>
                        </tr>
                        <tr>
                            <td style="width: 140px">Khách hàng: </td>
                            <td class="text-dark font-weight-semibold">@Model.Customer.FullName</td>
                        </tr>
                        <tr>
                            <td style="width: 140px">Số điện thoại:</td>
                            <td class="text-dark font-weight-semibold">@Model.Customer.Phone</td>
                        </tr>
                        <tr>
                            <td style="width: 140px">Địa chỉ:</td>
                            <td class="text-dark font-weight-semibold">@ViewBag.FullAddress</td>
                        </tr>
                        <tr>
                            <td style="width: 140px">Tổng tiền:</td>
                            <td class="text-dark font-weight-semibold">@Model.Tongtien.Value.ToString("#,##0")₫</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="AdminOrders" asp-action="ChangeStatus" asp-route-id="@Model.IdDh" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdDh" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" style=" margin-bottom: 20px;">
                            <label>Chọn trạng thái đơn hàng</label>
                            <select class="form-control" asp-for="IdTrangthai" asp-items="@ViewBag.TrangThai" required>
                                <option value="0" disabled selected>Chọn trạng thái đơn hàng</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group" style=" margin-bottom: 20px;">
                    <label>Đã thanh toán</label>
                    <input asp-for="Thanhtoan" type="checkbox" />
                    <span asp-validation-for="Thanhtoan" class="text-danger"></span>
                </div>
                <div class="form-group" style=" margin-bottom: 20px;">
                    <label>Đơn hàng bị hủy</label>
                    <input asp-for="Xoadonhang" type="checkbox" />
                    <span asp-validation-for="Xoadonhang" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="background-color: #007bff;
    border-color: #007bff;">
                    Lưu thay đổi
                </button>
            </form>
        </div>
        <div class="row">
        </div>
    </div>
</div>