@model ClotheStore.Models.Product

@{
    ViewData["Title"] = "Thông tin sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thông tin sản phẩm</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            Danh mục:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.CatName)
        </dd>
        <dt class="col-sm-2">
            Size : Số lượng
        </dt>
        <dd class="col-sm-10">
            @foreach (var size in Model.ProductSizes)
            {
                <p class="font-weight-bold">@size.Size.SizeName: @size.Quantity</p>
            }
        </dd>
        <dt class="col-sm-2">
            Giá:
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0:#,##0}", Model.Price)
        </dd>
        <dt class="col-sm-2">
            Discount:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount) %
        </dd>
        <dt class="col-sm-2">
            Mô tả ngắn:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh:
        </dt>
        <dd class="col-sm-10">
            @foreach(var image in Model.ProductImages)
            {
                <img style="width: 100px; height: 100px" src="~/images/sanphamImg/@image.ImageUrl" />
            }
        </dd>
        <dt class="col-sm-2">
            Ngày tạo:
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0: dd-MM-yyyy}", Model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            Active:
        </dt>
        <dd class="col-sm-10">
            @if (Model.Active)
            {
                <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault" checked>
                </div>
            }
            else
            {
                <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault">
                </div>
            }
        </dd>
        <dt class="col-sm-2">
            BestSeller:
        </dt>
        <dd class="col-sm-10">
            @if (Model.BestSeller)
            {
                <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault" checked>
                </div>
            }
            else
            {
                <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault">
                </div>
            }
        </dd>
        <dt class="col-sm-2">
            HomeFlag:
        </dt>
        <dd class="col-sm-10">
            @if (Model.HomeFlag)
            {
                <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault" checked>
                </div>
            }
            else
            {
                <div class="form-check form-switch ps-0">
                    <input class="form-check-input ms-auto" type="checkbox" id="flexSwitchCheckDefault">
                </div>
            }
        </dd>
        <dt class="col-sm-2">
            Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Alias:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
