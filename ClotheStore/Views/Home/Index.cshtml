@{
    ViewData["Title"] = "Trang chủ";
    List<Product> bestSale = ViewBag.BestSale;
    List<Product> newArrival = ViewBag.NewArrival;
}

<!-- Product Section Begin -->
<section class="product spad pt-8">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter=".new-arrivals">New Arrivals</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @if (newArrival != null && newArrival.Count() > 0)
            {
                foreach (var itemNew in newArrival)
                {
                    string url = Url.Action("Details", "Product", new { id = itemNew.ProductId, parentId = itemNew.Cat.ParentId, level = itemNew.Cat.Levels, ordering = itemNew.Cat.Ordering });
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        @{
                            var firstImage = itemNew.ProductImages.FirstOrDefault();
                        }
                        @if (firstImage != null)
                        {
                            <div class="product__item__pic set-bg">
                                <a href="@url">
                                    <img src="/images/sanphamImg/@firstImage.ImageUrl"/>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="product__item__pic set-bg">
                                <img src="/images/sanphamImg/default.jpg" />
                            </div>
                        }
                        <div class="product__item__text">
                                <h6>@itemNew.ProductName</h6>
                            <a href="@url" class="add-cart">=> Xem chi tiết</a>
                                <h5>@itemNew.Price.Value.ToString("#,##0")₫</h5>
                        </div>
                    </div>
                </div>

                }
            }
        </div>
    </div>
</section>
<!-- Product Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Best Sellers</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @if (bestSale != null && bestSale.Count() > 0)
            {
                foreach (var itemBest in bestSale)
                {
                    string url = Url.Action("Details", "Product", new { id = itemBest.ProductId, parentId = itemBest.Cat.ParentId, level = itemBest.Cat.Levels, ordering = itemBest.Cat.Ordering });
                    <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix hot-sales">
                        <div class="product__item">
                            @{
                                var firstImage = itemBest.ProductImages.FirstOrDefault();
                            }
                            @if (firstImage != null)
                            {
                                <div class="product__item__pic set-bg">
                                    <a href="@url">
                                        <img src="/images/sanphamImg/@firstImage.ImageUrl"/>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="product__item__pic set-bg">
                                    <img src="/images/sanphamImg/default.jpg" />
                                </div>
                            }
                            <div class="product__item__text">
                                <h6>@itemBest.ProductName</h6>
                                <a href="#" class="add-cart">+ Add To Cart</a>
                                <h5>@itemBest.Price.Value.ToString("#,##0")₫</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- Product Section End -->

